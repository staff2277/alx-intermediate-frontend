{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "lib": ["DOM", "ES6"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "files": [
    "js/subjects/Teacher.ts",
    "js/subjects/Subject.ts",
    "js/subjects/Cpp.ts",
    "js/subjects/Java.ts",
    "js/subjects/React.ts",
    "js/crud.ts",
    "js/main.ts"
  ],
  "include": ["interface.ts", "js/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
